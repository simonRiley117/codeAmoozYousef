{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"paths": {
			"@Components/*": ["./src/Components/*"],
			"@Layouts/*": ["./src/Layouts/*"],
			"@App/*": ["./src/*"],
			"@Assets/*": ["./src/Assets/Images/*"]
		}
	},
	"include": ["./src/*"],
	"exclude": ["node_modules","Assets"]
}